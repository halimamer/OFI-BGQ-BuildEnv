: ${CONFIG_TOOLCHAIN:=gnu}

CONFIG_SITE=@ac_abs_confdir@/config.site				\
$srcdir/configure							\
--prefix=$installdir							\
--enable-threads=multiple						\
--enable-thread-cs=global						\
--enable-handle-allocation=default
